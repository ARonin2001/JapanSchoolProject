<Window x:Class="aunteficationAdminForm.messageBoxForSchools"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aunteficationAdminForm"
        mc:Ignorable="d"
        Title="Редактировать / Добавить" Height="130" Width="230" MinHeight="130" MinWidth="230" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.30*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите операцию" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="add" Content="ДОБАВИТЬ" MinHeight="40" MaxHeight="40" MinWidth="90" Click="add_Click" />
            <Button x:Name="correct" Content="РЕДАКТИРОВАТЬ" MinHeight="40" MaxHeight="40" MinWidth="90" Margin="15 0 0 0" Click="correct_Click" />
        </StackPanel>
    </Grid>
</Window>
